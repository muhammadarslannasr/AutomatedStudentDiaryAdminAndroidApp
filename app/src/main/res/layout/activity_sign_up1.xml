<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_icon"
    android:orientation="vertical">


    <!--<android.support.v7.widget.Toolbar android:id="@+id/toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="?attr/actionBarSize"-->
        <!--android:background="?attr/colorPrimary"-->
        <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--xmlns:app="http://schemas.android.com/apk/res-auto">-->
    <!--</android.support.v7.widget.Toolbar>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/firstlayout"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_signupId"
                android:src="@mipmap/default_image"
                android:layout_width="120dp"
                android:layout_height="120dp" />
        </LinearLayout>


        <EditText
            android:id="@+id/rollnumberTextId"
            android:hint="Roll Number"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:inputType="numberDecimal"
            android:paddingLeft="16dp"
            android:background="@drawable/style_edittext"
            android:layout_width="300dp"
            android:layout_height="45dp" />

        <EditText
            android:id="@+id/firstusernameTextId"
            android:hint="Student Name"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:background="@drawable/style_edittext"
            android:layout_width="300dp"
            android:layout_height="45dp" />

        <EditText
            android:id="@+id/fathernameTextID"
            android:hint="Father Name"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:paddingLeft="16dp"
            android:inputType="textPersonName"
            android:layout_width="300dp"
            android:background="@drawable/style_edittext"
            android:layout_height="45dp" />
        <TextView
            android:id="@+id/textViewDateofbirth"
            android:textSize="16sp"
            android:text="Date of Birth:"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:id="@+id/dateofbirthlayoutId"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spinnerbirthdayId"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:background="@drawable/style_edittext" />

            <Spinner
                android:id="@+id/spinnerdateId"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:background="@drawable/style_edittext" />

            <Spinner
                android:id="@+id/spinneryearId"
                android:layout_width="100dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:layout_height="45dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:background="@drawable/style_edittext" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/genderlayoutId"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:text="Gender:"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinner2genderId"
                android:layout_width="100dp"
                android:textColor="#FFFFFF"
                android:layout_height="45dp"
                android:textColorHint="#FFFFFF"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="16dp"
                android:background="@drawable/style_edittext" />
        </LinearLayout>


        <EditText
            android:id="@+id/mobileNumberTextId"
            android:hint="Phone Number"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:layout_width="300dp"
            android:paddingLeft="16dp"
            android:background="@drawable/style_edittext"
            android:layout_height="45dp" />

        <EditText
            android:id="@+id/homeAddressEditTextId"
            android:hint="Home Address"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:inputType="textPersonName"
            android:layout_width="300dp"
            android:paddingLeft="16dp"
            android:background="@drawable/style_edittext"
            android:layout_height="45dp" />


        <TextView
            android:textStyle="bold"
            android:text="Month"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Spinner
            android:id="@+id/monthSpinnerId"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:paddingLeft="16dp"
            android:background="@drawable/style_edittext" />


        <TextView
            android:textStyle="bold"
            android:text="Attendence"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <Spinner
            android:id="@+id/attendenceSpinnerId"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:paddingLeft="16dp"
            android:background="@drawable/style_edittext" />


        <TextView
            android:textStyle="bold"
            android:text="Result"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Spinner
            android:id="@+id/resultSpinnerId"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:paddingLeft="16dp"
            android:background="@drawable/style_edittext" />


        <TextView
            android:textStyle="bold"
            android:text="Fess Record"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Spinner
            android:id="@+id/feesSpinnerId"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:paddingLeft="16dp"
            android:background="@drawable/style_edittext" />

        <TextView
            android:id="@+id/programTextViewId"
            android:textStyle="bold"
            android:text="Program"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/districtPakistanId"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:paddingLeft="16dp"
            android:background="@drawable/style_edittext" />

        <Button
            android:id="@+id/submitbuttonId"
            android:text="Submit"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:background="#5E9DC0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    </ScrollView>

</LinearLayout>
